<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rcl.excalibur" >
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:name="com.rcl.excalibur.RCLApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Home"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.rcl.excalibur.activity.LoadFromDBActivity"/>
        <activity android:name="com.rcl.excalibur.activity.MainActivity"/>
        <activity
            android:name=".activity.PlansActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Home"/>

        <meta-data
            android:name="AA_DB_NAME"
            android:value="testDB.db"/>
        <meta-data
            android:name="AA_MODELS"
            android:value="com.rcl.excalibur.data.entity.ItemEntity"
            />
    </application>

</manifest>
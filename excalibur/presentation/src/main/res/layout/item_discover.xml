<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    style="@style/AppTheme.PlanListCardView"
    android:layout_width="match_parent"
    android:layout_height="160dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_margin="@dimen/item_discovery_margin">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/card_title"
                style="@style/AppTheme.DiscoverTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"/>

            <TextView
                android:id="@+id/card_venue"
                style="@style/AppTheme.DiscoverOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_title"/>

            <TextView
                android:id="@+id/card_location"
                style="@style/AppTheme.DiscoverOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_venue"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_margin="@dimen/item_discovery_margin">

                <ImageView
                    android:id="@+id/ic_category_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_excrusions_color"
                    android:layout_marginEnd="@dimen/item_discovery_margin"
                    android:layout_gravity="center"/>

                <include
                    layout="@layout/module_product_detail_price_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

        <com.rcl.excalibur.utils.RoundedImageView
            android:id="@+id/card_image"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    </LinearLayout>
</android.support.v7.widget.CardView>
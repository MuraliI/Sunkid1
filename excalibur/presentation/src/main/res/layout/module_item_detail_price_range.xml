<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_large"
    android:layout_marginStart="@dimen/margin_large"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_large"
    android:paddingTop="@dimen/margin_large">

    <TextView
        android:id="@+id/price_range_module_title"
        style="@style/AppTheme.DiscoverItemModuleTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/price_range" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/price_range_module_dolar_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/price_range_dolar_margin_end"
            android:src="@drawable/icon_dolar"
            android:tint="@color/grey" />

        <ImageView
            android:id="@+id/price_range_module_dolar_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/price_range_dolar_margin_end"
            android:src="@drawable/icon_dolar"
            android:tint="@color/grey" />

        <ImageView
            android:id="@+id/price_range_module_dolar_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/price_range_dolar_margin_end"
            android:src="@drawable/icon_dolar"
            android:tint="@color/grey" />

        <ImageView
            android:id="@+id/price_range_module_dolar_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/price_range_dolar_margin_end"
            android:src="@drawable/icon_dolar"
            android:tint="@color/grey" />

        <ImageView
            android:id="@+id/price_range_module_dolar_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_dolar"
            android:tint="@color/grey" />
    </LinearLayout>
</LinearLayout>
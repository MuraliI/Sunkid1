<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/alert_no_products"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/image_no_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ship_no_products" />

        <TextView
            android:id="@+id/text_no_products"
            style="@style/DiscoveryNoProducts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_no_products"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingLeft="@dimen/padding_text_no_products_center"
            android:paddingRight="@dimen/padding_text_no_products_center"
            android:paddingTop="@dimen/padding_text_no_products_top"
            android:text="@string/no_items_to_show" />

    </RelativeLayout>
</RelativeLayout>


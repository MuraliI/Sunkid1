<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    android:background="@color/itinerary_product_card_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/no_size"
        android:paddingStart="@dimen/margin_small"
        android:weightSum="@integer/itinerary_product_view_total_weight">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="@integer/itinerary_product_view_total_weight"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_product_name"
                style="@style/AppTheme.ProductTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grease - The Musical" />

            <TextView
                android:id="@+id/text_product_operating_hours"
                style="@style/AppTheme.ProductDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_product_margin"
                android:text="13:00 PM - 16:30PM" />

            <TextView
                android:id="@+id/text_product_location"
                style="@style/AppTheme.ProductVenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Main Pool, Deck 12 AFT" />
        </LinearLayout>

        <ImageView
            android:id="@+id/image_product"
            android:layout_width="@dimen/item_product_image_width"
            android:layout_height="@dimen/item_product_image_height"
            android:contentDescription="@string/itinerary_accessibility_product_image"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_number"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/white"
        android:visibility="gone" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_itinerary_list"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_part_of_day"
        style="@style/AppTheme.Headline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_normal"
        android:gravity="center_vertical"
        android:text="@string/planner_all_day_item" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/itinerary_separator_thickness"
        android:background="@color/discover_grey" />
</LinearLayout>
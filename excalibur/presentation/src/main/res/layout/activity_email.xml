<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.rcl.excalibur.activity.EmailActivity"
    android:background="@drawable/bg_account_email"
    android:id="@+id/email_layout"
    android:focusable="true"
    android:focusableInTouchMode="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">


        <TextView
            android:id="@+id/textViewEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/title_email_address" />

        <EditText
            android:id="@+id/editTextEmail"
            android:theme="@style/AppTheme.EmailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/email_editText_inactive"
            android:textSize="25sp"
            android:hint="@string/title_hint_email_address"
            android:textColor="@color/white"
            />


        <TextView
            android:id="@+id/textViewEmailAddressError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
             />

        <ImageView
            android:layout_gravity="right"
            android:id="@+id/imageViewNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/next_active"
            android:layout_margin="@dimen/plan_list_margin_fab"
            android:tint="@color/white"
            android:alpha=".24"
            />

    </LinearLayout>



    <ImageView
        android:id="@+id/imageViewBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_trending_flat"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="14dp"
        />




</RelativeLayout>

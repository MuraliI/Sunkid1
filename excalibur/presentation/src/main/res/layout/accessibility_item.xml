<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_normal">

    <ImageView
        android:id="@+id/image_accessibility"
        android:layout_width="@dimen/product_detail_accessibililty_image_size"
        android:layout_height="@dimen/product_detail_accessibililty_image_size" />

    <TextView
        android:id="@+id/text_subtitle"
        style="@style/AppTheme.ProductDetailDescriptionModuleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_accessibility"
        android:paddingLeft="@dimen/product_detail_accessibililty_image_size" />

    <TextView
        android:id="@+id/text_description"
        style="@style/AppTheme.ProductDetailSubDescriptionModuleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_subtitle"
        android:layout_toRightOf="@id/image_accessibility"
        android:paddingLeft="@dimen/product_detail_accessibililty_padding" />

</RelativeLayout>

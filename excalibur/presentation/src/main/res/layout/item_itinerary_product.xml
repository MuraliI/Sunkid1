<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/margin_large"
        android:paddingLeft="@dimen/item_product_padding">

        <ImageView
            android:id="@+id/image_product"
            android:layout_width="@dimen/item_product_image_width"
            android:layout_height="@dimen/item_product_image_height"
            android:layout_alignParentEnd="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_name"
                style="@style/AppTheme.ProductTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_date"
                style="@style/AppTheme.ProductDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_name"
                android:layout_marginTop="@dimen/item_product_margin" />

            <TextView
                android:id="@+id/text_venue"
                style="@style/AppTheme.ProductVenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_date" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>


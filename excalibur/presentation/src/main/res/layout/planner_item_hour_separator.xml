<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/margin_planner_separator"
    android:layout_marginEnd="@dimen/margin_planner_separator"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_planner_hour_separator"
        android:layout_margin="@dimen/margin_planner_hour_separator_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="10 AM" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/itinerary_separator_thickness"
        android:background="@color/discover_grey" />

</LinearLayout>
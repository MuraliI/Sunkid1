<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Header-->
    <RelativeLayout
        android:id="@+id/plans_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/plan_list_padding_bottom_header"
        android:paddingLeft="@dimen/plan_list_padding_left_header"
        android:paddingRight="@dimen/plan_list_padding_right_header"
        android:paddingTop="@dimen/plan_list_padding_top_header">

        <RelativeLayout
            android:id="@+id/plans_header_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/plans_header_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/title_arrow_pager_list_product"
                android:src="@drawable/ic_arrow_left"
                android:tint="@color/plan_list_lightblue" />

            <TextView
                android:id="@+id/plans_header_name"
                style="@style/PlanListDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/plans_header_back"
                android:text="@string/hardcoded_today" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/title_icon_pager_list_product"
                android:layout_toEndOf="@+id/plans_header_name"
                android:src="@drawable/icon_arrow_small_gray"
                android:tint="@color/black" />


        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/plans_header_container">

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout_products_list_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            app:tabMode="fixed" />

        <android.support.v4.view.ViewPager
            android:id="@+id/full_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/plan_list_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/plan_list_margin_fab"
            android:scaleType="center"
            android:src="@drawable/filters"
            app:backgroundTint="@android:color/transparent"
            app:useCompatPadding="true" />

    </RelativeLayout>

</RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--Header-->
    <include layout="@layout/header_plan_list" />

    <android.support.design.widget.TabLayout
        android:id="@+id/plan_list_tab_layout"
        style="@style/AppTabLayout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/plan_list_height_tab_layout"
        android:layout_below="@+id/plans_header_container"
        android:minHeight="?attr/actionBarSize"
        android:paddingLeft="@dimen/plan_list_padding_left_header"
        android:paddingRight="@dimen/plan_list_padding_right_header"
        app:tabTextAppearance="@style/AppTabTextAppearance" />

    <android.support.v4.view.ViewPager
        android:id="@+id/plan_list_view_pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/plan_list_tab_layout" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/plan_list_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:scaleType="center"
        android:layout_margin="@dimen/plan_list_margin_fab"
        android:src="@drawable/filters"
        app:backgroundTint="@android:color/transparent"
        app:useCompatPadding="true" />

</RelativeLayout>


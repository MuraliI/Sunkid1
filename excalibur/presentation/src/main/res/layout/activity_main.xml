<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    android:orientation="horizontal"
    android:id="@+id/main_background_image">

    <Button
        android:id="@+id/back_button"
        android:layout_width="@dimen/back_btn_size"
        android:layout_height="@dimen/back_btn_size"
        android:background="@android:color/transparent"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/forward_button"
        android:layout_marginTop="@dimen/top_image_margin"
        android:layout_width="@dimen/fowrard_btn_button"
        android:layout_height="@dimen/fowrard_btn_button"
        android:layout_marginLeft="@dimen/left_margin_forward"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/btn_LoadDataDB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/load_from_db"
        android:visibility="visible"/>
</LinearLayout>

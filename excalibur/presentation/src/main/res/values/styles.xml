<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextViewExample" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="AppTheme.TextViewSecondExample" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFF</item>
    </style>

</resources>

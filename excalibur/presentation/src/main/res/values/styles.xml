<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Home" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ShipTime" parent="@android:style/Widget.TextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.PlanCardView" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/item_plan_corner_radius</item>
    </style>

    <!-- Fonts -->
    <style name="AppTheme.PlanTitleText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.DiscoverItemReservationText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.DiscoverItemLocationText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.DiscoverItemTextView" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.DiscoverItemModuleTitleTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/font_detail_title_gray</item>
    </style>

    <style name="AppTheme.DiscoverItemModuleDescriptionTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/font_detail_description_dark_blue</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.TimeTextView" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_light</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.PlanNextTextView" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="AppTheme.PlanTitleTextView" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.PlanTimeTextView" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

</resources>

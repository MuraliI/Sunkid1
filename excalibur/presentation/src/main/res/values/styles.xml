<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Home" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ShipTime" parent="@android:style/Widget.TextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.PlanCardView" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/item_plan_corner_radius</item>
    </style>

    <!-- Fonts -->
    <style name="AppTheme.PlanTitleText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.DiscoverItemReservationText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.DiscoverItemLocationText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.DiscoverItemDescriptionText" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/detail_item_description</item>
    </style>

    <style name="AppTheme.DiscoverItemSeeMoreLink">
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/detail_item_link</item>
    </style>

    <style name="AppTheme.DiscoverItemTextView" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.DiscoverItemModuleTitleTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/font_detail_title_gray</item>
    </style>

    <style name="AppTheme.DiscoverItemModuleDescriptionTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/font_detail_description_dark_blue</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.DiscoverItemModuleSmallDescriptionTextView" parent="AppTheme.DiscoverItemModuleDescriptionTextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.DiscoverItemModuleSubTitleTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/font_detail_description_dark_blue</item>
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:layout_marginTop">@dimen/detail_discover_item_description_margin_top
        </item>
    </style>

    <style name="AppTheme.DiscoverItemModuleLinkTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/detail_item_link</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.TimeTextView" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_light</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.PlanListCardView" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="AppTheme.PlanNextTextView" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="AppTheme.PlanTitleTextView" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.PlanTimeTextView" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <!-- Fonts.Itinerary -->
    <style name="AppTheme.ItinteraryGreetingText" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <!--<item name="tabMaxWidth">@dimen/tab_max_width</item>-->
        <item name="tabIndicatorColor">@color/plan_list_lightblue</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/plan_list_lightblue</item>
        <item name="tabMode">scrollable</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#6b6b6b</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">#f5f5f5</item>
        <item name="fontPath">@string/roboto_regular</item>

    </style>

    <style name="PlanListDay" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#34323d</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="PlanListSectionSelected">
        <item name="fontPath">@string/roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/plan_list_lightblue</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="PlanListSectionUnselected">
        <item name="fontPath">@string/roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/plan_list_grey</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="AppTheme.DiscoverTitle" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/discover_black</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.DiscoverOther" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/discover_grey</item>
    </style>

    <style name="AppTheme.DiscoverItemTitleLinkTextView">
        <item name="fontPath">@string/roboto_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/detail_item_link</item>
    </style>

    <style name="AppTheme.ProductTitle" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/itinerary_product_card_text_dark_grey</item>
    </style>

    <style name="AppTheme.ProductDate" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/itinerary_product_card_text_grey</item>
    </style>

    <style name="AppTheme.ProductVenue" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/itinerary_product_card_text_grey</item>
    </style>

    <style name="AppTheme.CalendarHour" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="AppTheme.DiscoverPageTitle" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.DiscoverButtonText" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.EmailEditText" parent="@android:style/Widget.EditText">
        <item name="android:colorControlNormal">@color/email_editText_inactive</item>
        <item name="android:colorControlActivated">@color/white</item>
        <item name="android:colorControlHighlight">@color/white</item>
    </style>

</resources>

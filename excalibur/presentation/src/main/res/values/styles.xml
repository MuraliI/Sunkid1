<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>

    </style>
    <style name="AppTheme.Home" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ShipTime" parent="@android:style/Widget.TextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.PlaceTextView" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppTheme.TimeTextView" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_light</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppTheme.PlanCardView" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/item_plan_corner_radius</item>
    </style>
    <style name="AppTheme.PlanListCardView" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
    </style>
    <style name="AppTheme.PlanNextTextView" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="AppTheme.PlanTitleTextView" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.PlanTimeTextView" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="AppTheme.TextViewExample" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="AppTheme.TextViewSecondExample" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <!--<item name="tabMaxWidth">@dimen/tab_max_width</item>-->
        <item name="tabIndicatorColor">@color/plan_list_lightblue</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/plan_list_lightblue</item>
        <item name="tabMode">scrollable</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#6b6b6b</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">#f5f5f5</item>
        <item name="fontPath">@string/roboto_regular</item>

    </style>

    <style name="PlanListDay" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#34323d</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="PlanListSectionSelected">
        <item name="fontPath">@string/roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/plan_list_lightblue</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="PlanListSectionUnselected">
        <item name="fontPath">@string/roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="AppTheme.DiscoverTitle" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="AppTheme.DiscoverOther" parent="@android:style/Widget.TextView">
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/discover_grey</item>
    </style>

</resources>
